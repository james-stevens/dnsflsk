if test "${SYSLOG_SERVER}"
	then
		if test "${SYSLOG_SERVER}" = "-"
			then
				exec /sbin/syslogd -n -O /dev/null
			else
				exec /sbin/syslogd -n -R ${SYSLOG_SERVER}
			fi
	fi

exec /sbin/syslogd -n -O -
