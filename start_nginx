temp="client_body_temp proxy_temp scgi_temp uwsgi_temp fastcgi_temp"
dirs="nginx.log ${temp}"

cd /ram
mkdir -p -m 700 ${dirs}
chown daemon: ${dirs}
chmod 700 ${dirs}

opts="daemon off;"

if test -f /usr/local/nginx/conf/cert.pem
	then
		conf="nginx_dnsflsk_ssl.conf"
	else
		conf="nginx_dnsflsk.conf"
	fi

exec /usr/local/nginx/sbin/nginx -c conf/${conf} -g "${opts}"
